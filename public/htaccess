RewriteEngine on
RewriteBase /

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect non-www to www
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# RewriteEngine On
# RewriteBase /

# Remove .php extension from requested URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# Redirect to remove .php if directly accessed
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]


# Rewrite /home to index.php
RewriteRule ^home/?$ index.php [L,NC]
RewriteRule ^user-cars/?$ user-cars.php [L,NC]
RewriteRule ^sell-your-car/?$ sell-your-car.php [L,NC]
RewriteRule ^pco-hire/?$ pco-hire.php [L,NC]

